generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id            Int         @id @default(autoincrement())
  text          String
  completed     Boolean     @default(false)
  createdTime   DateTime    @default(now())
  tags          Tag[]
}

model Tag {
  id            Int         @id @default(autoincrement())
  text          String      @unique
  todos         Todo[]
}
